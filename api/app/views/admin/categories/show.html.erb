<p style="color: green"><%= notice %></p>

<p>ID: <%= @category.id %></p>
<p>Name: <%= @category.name %></p>
<p>Created at: <%= @category.created_at %></p>

<div>
  <%= link_to "Edit", edit_admin_category_path(@category), class: "btn btn-primary" %> |
  <%= link_to "Back to categories", admin_categories_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy", admin_category_path(@category), method: :delete, class: "btn btn-danger mt-4" %>
</div>
